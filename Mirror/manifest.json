{
  "name": "Mirror",
  "version": "0.1.5",
  "manifest_version": 2,
  "description": "Share your youtube player for simultaneous viewing",
  "permissions": [
    "tabs",
    "contextMenus",
    "declarativeContent"
  ],
  "icons": {
    "16": "icon-large.png",
    "48": "icon-large.png",
    "128": "icon-large.png"
  },
  "web_accessible_resources": ["jquery.min.js","script.js"],
  "background": {
    "scripts": [
      "socket.io.js","background.js"]
  },
  "page_action" :
  {
    "default_icon": "icon-large.png",
    "default_title" : "Mirror - Connect or Disconnect from user",
    "default_popup" : "popup.html"
  },
  "content_scripts": [{
    "matches":[
      "http://www.youtube.com/*",
      "https://www.youtube.com/*"],
    "js": ["jquery.min.js","contentscript.js"]
  }],
  "input_components":
    [
      {
        "name": "Mirror",
        "type": "",
        "id": "mirror",
        "description": "Shared youtube interaction for simultaneous viewing",
        "language": "en-US",
        "layouts": [
          "us::eng"
        ]
      }
    ]
}
