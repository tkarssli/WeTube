{
  "name": "Mirror",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Shared webpage extension",
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": ["script.js"],
  "background": {
    "scripts": [
      "socket.io.js","background.js"]
  },
  "content_scripts": [{
    "matches":[
      "http://*/*",
      "https://*/*"],
    "js": ["contentscript.js"]
  }],
  "input_components": [
    {
      "name": "Mirror",
      "type": "",
      "id": "mirror",
      "description": "Shared webpage interaction",  // A user visible description
      "language": "en-US",  // The primary language
      "layouts": ["us::eng"]  // The supported keyboard layouts
    }
  ]
}
