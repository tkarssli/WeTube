{
  "manifest_version": 2,

  "name": "Mirror",
  "description": "Shared HTML page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Mirror Settings"
  },
  "content_scripts": [{
    "matches":[
      "http://*/*",
      "https://*/*"],
    "js": ["pageManager.js"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}